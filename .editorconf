root = true

[*]
charset = utf-8
indent_size = 4
end_of_line = lf
indent_style = space 
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
indent_style = space

[*.css]
indent_size = 2
indent_style = tab

[*.less]
indent_size = 2
indent_style = tab

[Makefile]
indent_style = tab

[*.json]
indent_size = 2
